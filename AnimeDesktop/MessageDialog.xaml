<Window x:Class="AnimeDesktop.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimeDesktop"
        xmlns:helpers="clr-namespace:AnimeDesktop.Helpers"
        mc:Ignorable="d"
		ResizeMode="NoResize"
		helpers:WindowBehavior.HideCloseButton="True"
        Title="MessageDialog" Height="124" Width="329">
	<Grid>
		<Viewbox>
			<TextBlock TextWrapping="Wrap" x:Name="Message"/>
		</Viewbox>
	</Grid>
</Window>
