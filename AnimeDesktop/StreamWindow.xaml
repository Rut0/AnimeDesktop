<Window x:Class="AnimeDesktop.StreamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimeDesktop"
        mc:Ignorable="d"
        Title="StreamWindow" Height="300" Width="300">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
        <MediaElement
			Grid.Row="0"
		    x:Name="MediaPlayer"
		    HorizontalAlignment="Stretch"
			MouseLeftButtonUp="MediaPlayer_OnMouseLeftButtonUp"
		    VerticalAlignment="Stretch"/>     
		<Grid Grid.Row="1" Margin="5">
			<TextBlock x:Name="LogBlock">Progress: <Run Text="{Binding Path=DownloadProgress, ElementName=MediaPlayer, Mode=OneWay}"></Run></TextBlock>
		</Grid>
    </Grid>
</Window>
